<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

    <Switch
            android:layout_marginLeft="20dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteY="25dp"
            tools:layout_editor_absoluteX="300dp"
            android:id="@+id/itemrow_switch"
            android:layout_toRightOf="@+id/itemrow_title"/>

    <TextView
            android:layout_width="217dp"
            android:layout_height="32dp"
            tools:layout_editor_absoluteY="9dp"
            tools:layout_editor_absoluteX="32dp"
            android:id="@+id/itemrow_title"
            tools:ignore="MissingConstraints"
            android:textSize="24sp"/>

    <!--<LinearLayout android:layout_width="3dp"-->
    <!--android:layout_height="wrap_content"-->
    <!--tools:ignore="MissingConstraints"-->
    <!--tools:layout_editor_absoluteY="68dp"-->
    <!--tools:layout_editor_absoluteX="90dp"-->
    <!--android:layout_below="@+id/itemrow_title">-->

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/time_hr"
              android:textSize="24sp"
              tools:text="hr"
              android:layout_below="@+id/itemrow_title"
    />

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text=":"
              android:id="@+id/time_dots"
              android:layout_below="@+id/itemrow_title"
              android:layout_toRightOf="@+id/time_hr"
              android:textSize="24sp"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/time_min"
              tools:text="min"
              android:textSize="24sp"
              android:layout_below="@+id/itemrow_title"
              android:layout_toRightOf="@+id/time_dots"/>
    <!--</LinearLayout>-->
</RelativeLayout>